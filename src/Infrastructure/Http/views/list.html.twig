{% for image in images %}
    <div class="col-4 mb-4">
        <button type="button" class="close" aria-label="Close">
            <a href="{{ path('remove', {'uuid': image.uuid}) }}" class="badge badge-danger">Ã—</a>
        </button>
        <a href="{{ path('image', {'uuid': image.uuid}) }}" class="thumbnail">
            <img
                alt="{{ image.name }}"
                class="img-fluid img-thumbnail"
                width="640"
                height="480"
                src="{{ path('image', {'uuid': image.uuid}) }}"
            />
            <div class="caption">
                {{ image.name }} ({{ image.uploadedAt }})
            </div>
        </a>
    </div>
{% endfor %}
