{
    "name": "doop",
    "license": "MIT",
    "private": true,
    "engines": {
        "node": ">= 16.8",
        "yarn": ">= 1.22"
    },
    "scripts": {
        "dev-server": "nodemon --exec 'encore dev-server --keep-public-path --config config/encore.js'",
        "dev": "encore dev --config config/encore.js",
        "watch": "encore dev --watch --config config/encore.js",
        "build": "encore production --progress --config config/encore.js",
        "lint": "eslint src/Frontend/ts/"
    },
    "dependencies": {
        "bootstrap": "^5.1"
    },
    "devDependencies": {
        "@popperjs/core": "^2.10.1",
        "@symfony/webpack-encore": "^1.6",
        "@typescript-eslint/eslint-plugin": "^4.30",
        "@typescript-eslint/parser": "^4.30",
        "core-js": "^3.17",
        "cssnano": "^5.0",
        "eslint": "^7.32",
        "eslint-config-prettier": "^8.3",
        "eslint-plugin-prettier": "^4.0",
        "nodemon": "^2.0",
        "postcss": "^8.3",
        "postcss-loader": "^6.1",
        "prettier": "^2.3",
        "sass": "^1.39",
        "sass-loader": "^12.1",
        "ts-loader": "^9.2",
        "typescript": "^4.4"
    },
    "nodemonConfig": {
        "watch": [
            "config/encore.js",
            "tsconfig.json"
        ]
    }
}
