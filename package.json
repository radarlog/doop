{
    "name": "doop",
    "license": "MIT",
    "private": true,
    "engines": {
        "node": ">= 21.0",
        "yarn": ">= 1.22"
    },
    "type": "module",
    "imports": {
        "#doop/*": "./src/Frontend/*"
    },
    "scripts": {
        "dev-server": "nodemon --exec 'encore dev-server --keep-public-path --config config/encore.js'",
        "dev": "encore dev --config config/encore.js",
        "watch": "encore dev --watch --config config/encore.js",
        "build": "encore production --progress --config config/encore.js",
        "lint": "eslint src/Frontend/ts/"
    },
    "dependencies": {
        "bootstrap": "^5.3"
    },
    "devDependencies": {
        "@babel/core": "^7.24",
        "@babel/preset-env": "^7.24",
        "@popperjs/core": "^2.11",
        "@symfony/webpack-encore": "^4.6",
        "@typescript-eslint/eslint-plugin": "^7.2",
        "@typescript-eslint/parser": "^7.2",
        "core-js": "^3.36",
        "cssnano": "^6.1",
        "eslint": "^8.57",
        "eslint-config-prettier": "^9.1",
        "eslint-plugin-prettier": "^5.1",
        "nodemon": "^3.1",
        "postcss": "^8.4",
        "postcss-loader": "^7.3",
        "prettier": "^3.2",
        "sass": "^1.71",
        "sass-loader": "^14.1",
        "ts-loader": "^9.5",
        "typescript": "^5.4",
        "webpack": "^5.90",
        "webpack-cli": "^5.1"
    },
    "nodemonConfig": {
        "watch": [
            "config/encore.js",
            "tsconfig.json"
        ]
    }
}
