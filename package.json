{
    "name": "doop",
    "license": "MIT",
    "private": true,
    "engines": {
        "node": ">= 17.2",
        "yarn": ">= 1.22"
    },
    "scripts": {
        "dev-server": "nodemon --exec 'encore dev-server --keep-public-path --config config/encore.js'",
        "dev": "encore dev --config config/encore.js",
        "watch": "encore dev --watch --config config/encore.js",
        "build": "encore production --progress --config config/encore.js",
        "lint": "eslint src/Frontend/ts/"
    },
    "dependencies": {
        "bootstrap": "^5.1"
    },
    "devDependencies": {
        "@popperjs/core": "^2.11",
        "@symfony/webpack-encore": "^1.8",
        "@typescript-eslint/eslint-plugin": "^5.19",
        "@typescript-eslint/parser": "^5.19",
        "core-js": "^3.22",
        "cssnano": "^5.1",
        "eslint": "^8.13",
        "eslint-config-prettier": "^8.5",
        "eslint-plugin-prettier": "^4.0",
        "nodemon": "^2.0",
        "postcss": "^8.4",
        "postcss-loader": "^6.2",
        "prettier": "^2.6",
        "sass": "^1.50",
        "sass-loader": "^12.6",
        "ts-loader": "^9.2",
        "typescript": "^4.6"
    },
    "nodemonConfig": {
        "watch": [
            "config/encore.js",
            "tsconfig.json"
        ]
    }
}
